{
  "include": ["src/**/*", "*.*"],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": ["**/*.log", "node_modules/**/*"]
  },
  "output": {
    "style": "plain",
    "filePath": "repomix-output.txt",
    "removeComments": true,
    "showLineNumbers": true,
    "topFilesLength": 10
  }
}
